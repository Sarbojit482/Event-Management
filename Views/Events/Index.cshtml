@model IEnumerable<EventManagement.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1 class="mb-4">Events</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Event</a>
</p>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Venue</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.StartTime.ToLocalTime().ToString("g")</td>
                <td>@ev.EndTime.ToLocalTime().ToString("g")</td>
                <td>@ev.Venue?.Name</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@ev.Id">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@ev.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@ev.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
