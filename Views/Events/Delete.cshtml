@model EventManagement.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1 class="mb-4 text-danger">Delete Event</h1>

<div class="card p-4 mb-3 shadow-sm">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Start Time:</strong> @Model.StartTime.ToLocalTime().ToString("f")</p>
    <p><strong>End Time:</strong> @Model.EndTime.ToLocalTime().ToString("f")</p>
    <p><strong>Venue:</strong> @Model.Venue?.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
